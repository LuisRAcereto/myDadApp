@using Microsoft.Extensions.Configuration
@inject IConfiguration Config

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Dad says...</h1>
    <p>Dad's wisdom brought to you by https://icanhazdadjoke.com</a>.</p>
</div>

<h2 class="jumbotron font-weight-bold" style="background-color:@Config["FavoriteColor"]" id="joke"></h2>


<div class='alert alert-warning'>
    <h3><b>Environment:</b> </h3>
    <hr /><b>Machine:</b> @System.Environment.MachineName</h3>
    <br /><b>OS:</b> @System.Environment.OSVersion</h3>
    <br /><b>Framework:</b> @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</h3>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $.ajax({
            type: 'GET',
            url: 'https://icanhazdadjoke.com',
            dataType: 'json',
            success: function (msg) {
                $('#joke').html(msg.joke);

            },
            error: function (request, status, error) {
                $('#joke').html("Error getting joke");
            }
        });


    });
</script>

